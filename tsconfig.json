{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "lib",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": ["src", "typings.d.ts"],
    "exclude": ["src/**/demo", "src/**/__tests__"]
}